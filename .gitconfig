[user]
  name = Vu Le
  email = thenewvu@gmail.com
[core]
  editor = nvim
	excludesfile = ~/.gitexcludes
[credential]
  helper = cache --timeout 360000
[gc]
  autoDetach = false
[pull]
  rebase = true
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[difftool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE
[merge]
  tool = vimdiff
[mergetool]
  prompt = false
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[alias]
  s  = status -s
  l  = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative
  a  = add
  ai = add -i -p
  c  = commit -v
  d  = diff -w
  dc = diff --cached -w
  p  = push
