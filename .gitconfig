[user]
	name = Vu Le
	email = thenewvu@gmail.com
[core]
	editor = nvim
	excludesfile = ~/.gitexcludes
[credential]
	helper = cache --timeout 360000
[pager]
    diff = diff-so-fancy | less -R --tabs=4 --pattern '^(Date|added|deleted|modified): '
    log = diff-so-fancy | less -R --tabs=4 --pattern '^(Date|added|deleted|modified): '
    show = diff-so-fancy | less -R --tabs=4 --pattern '^(Date|added|deleted|modified): '
[interactive]
	diffFilter = diff-highlight
[gc]
	autoDetach = false
[pull]
	rebase = true
[log]
    date = relative
[diff]
	indentHeuristic = true
    wordRegex = [A-Z0-9]+|[A-Z0-9]?[a-z0-9]+|[^[:space:]]
	tool = vimdiff
	algorithm = histogram
[difftool]
	prompt = false
[difftool "vimdiff"]
	cmd = nvim -d $LOCAL $REMOTE
[merge]
	tool = nvim
[mergetool]
	prompt = false
[mergetool "nvim"]
	cmd = nvim -f -c \"Gvdiff\" \"$MERGED\"
[color]
	branch = auto
	diff = auto
	status = auto
    showbranch = auto
	ui = true
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = 11
	frag = 11
    func = 11
	old = "#edabb8" "#a05454"
	new = "#b8edab" "#437f43"
	commit = 8
	whitespace = 8
[color "interactive"]
    prompt = 11
    header = 11
    help = 11
    error = 11
[color "status"]
	added = 10
	changed = 11
    untracked = 15
[help]
	autocorrect = 50
[color "diff-highlight"]
    oldNormal = "#edabb8" "#a05454"
    oldHighlight = "#2c4e6c" "#edabb8"
    newNormal = "#b8edab" "#437f43"
    newHighlight = "#2c4e6c" "#b8edab"
