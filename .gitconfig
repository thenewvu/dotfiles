[user]
	name = Vu Le
	email = thenewvu@gmail.com
[core]
	editor = nvim
	excludesfile = ~/.gitexcludes
[credential]
	helper = cache --timeout 360000
[interactive]
	diffFilter = diff-highlight
[gc]
	autoDetach = false
[pull]
	rebase = true
[log]
    date = relative
[diff]
	indentHeuristic = true
    wordRegex = [A-Z0-9]+|[A-Z0-9]?[a-z0-9]+|[^[:space:]]
    algorithm = histogram
    context = 10
[difftool]
	prompt = false
[merge]
	tool = nvim
[mergetool]
	prompt = false
[mergetool "nvim"]
	cmd = nvim -f -c \"Gvdiff\" \"$MERGED\"
[color]
	branch = auto
	diff = auto
	status = auto
    showbranch = auto
	ui = true
[color "branch"]
	current = "#ede0ab" reverse
	local = "#ede0ab"
	remote = "#b8edab"
[color "diff"]
	meta = "#ede0ab"
	frag = "#ede0ab"
    func = "#ede0ab"
	old = "#edabb8"
	new = "#b8edab"
	commit = "#2c4e6c"
	whitespace = "#2c4e6c"
[color "interactive"]
    prompt = "#ede0ab"
    header = "#ffffff"
    help = "#ffffff"
    error = "#edabb8"
[color "status"]
	added = "#b8edab"
	changed = "#ede0ab"
    untracked = "#ffffff"
[help]
	autocorrect = 50

[core]
    pager = delta

[delta]
    navigate = true
    hunk-header-style = omit
    minus-style = 'syntax "#a05454"'
    minus-emph-style = 'syntax ul "#a05454"'
    plus-style = 'syntax "#437f43"'
    plus-emph-style = 'syntax ul "#437f43"'
    side-by-side = true
    syntax-theme = none
    line-numbers-zero-style = 'black'
    line-numbers-left-style = 'black'
    line-numbers-right-style = 'black'
    line-numbers-plus-style = '"#437f43"'
    line-numbers-minus-style = '"#a05454"'
