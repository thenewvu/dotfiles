[user]
  name = Vu Le
  email = thenewvu@gmail.com
[core]
  editor = nvim
  excludesfile = ~/.gitexcludes
[credential]
  helper = cache --timeout 360000
[gc]
  autoDetach = false
[pull]
  rebase = true
[diff]
  tool = vimdiff
  algorithm = histogram
[difftool]
  prompt = false
[difftool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE
[merge]
  tool = nvim
[mergetool]
  prompt = false
[mergetool "nvim"]
  cmd = nvim -f -c \"Gvdiff\" \"$MERGED\"
[alias]
  status-short = status -s
  graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative
  add-part = add -i -p
  commit-visual = commit -v
  clone-shallow= clone --shallow-submodules --depth=1 -j8 
