[user]
  name = Vu Le
  email = thenewvu@gmail.com
[core]
  editor = nvim
  excludesfile = ~/.gitexcludes
[credential]
  helper = cache --timeout 360000
[gc]
  autoDetach = false
[pull]
  rebase = true
[diff]
  tool = vimdiff
  algorithm = histogram
[difftool]
  prompt = false
[difftool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE
[merge]
  tool = nvim
[mergetool]
  prompt = false
[mergetool "nvim"]
  cmd = nvim -f -c \"Gvdiff\" \"$MERGED\"
[alias]
  s   = status -s
  l   = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative
  a   = add
  ai  = add -i -p
  c   = commit -v
  d   = diff -w
  dt  = difftool -w
  dw  = diff -w --color-words
  dc  = diff --cached -w
  dct = difftool --cached -w
  dcw = diff --cached -w --color-words
  p   = push
  clonefast = clone --shallow-submodules --depth=1 -j8 
