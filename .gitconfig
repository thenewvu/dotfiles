[user]
	name = Vu Le
	email = thenewvu@gmail.com
[core]
	editor = nvim
	excludesfile = ~/.gitexcludes
[credential]
	helper = cache --timeout 360000
[pager]
    diff = diff-so-fancy | less -R --tabs=4 --pattern '^(Date|added|deleted|modified): '
    log = diff-so-fancy | less -R --tabs=4 --pattern '^(Date|added|deleted|modified): '
    show = diff-so-fancy | less -R --tabs=4 --pattern '^(Date|added|deleted|modified): '
[interactive]
	diffFilter = diff-highlight
[gc]
	autoDetach = false
[pull]
	rebase = true
[log]
    date = relative
[diff]
	indentHeuristic = true
    wordRegex = [A-Z0-9]+|[A-Z0-9]?[a-z0-9]+|[^[:space:]]
	tool = vimdiff
    algorithm = histogram
    context = 10
[difftool]
	prompt = false
[difftool "vimdiff"]
	cmd = nvim -d $LOCAL $REMOTE
[merge]
	tool = nvim
[mergetool]
	prompt = false
[mergetool "nvim"]
	cmd = nvim -f -c \"Gvdiff\" \"$MERGED\"
[color]
	branch = auto
	diff = auto
	status = auto
    showbranch = auto
	ui = true
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = 11
	frag = 11
    func = 11
	old = 9
	new = 10
	commit = 8
	whitespace = 8
[color "interactive"]
    prompt = 11
    header = 15
    help = 15
    error = 9
[color "status"]
	added = 10
	changed = 11
    untracked = 15
[help]
	autocorrect = 50
[color "diff-highlight"]
    oldNormal = 9
    oldHighlight = 9 1
    newNormal = 10
    newHighlight = 10 2
[diff-so-fancy]
    markEmptyLines = false
