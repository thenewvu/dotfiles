#!/usr/bin/env sh

#
# wm independent hotkeys
#

# program launcher
{super, alt, ctrl} + @space
  dmenu_run -fn 'San Francisco:pixelsize=10:style=Regular' \
    -nb '#c6c6c6' -nf '#222222' -sf '#000000' -sb '#c6c6c6'

# make sxhkd reload its configuration files:
super + Escape
  pkill -USR1 -x sxhkd

## media keys
XF86AudioRaiseVolume
  amixer -q sset Master,0 5+ unmute

XF86AudioLowerVolume
  amixer -q sset Master,0 5- unmute

XF86AudioMute
  amixer -q set Master toggle

XF86TouchpadToggle
  ~/.bin/touchpadctl toggle

XF86MonBrightnessUp
  xbacklight -inc 5

XF86MonBrightnessDown
  xbacklight -dec 5

XF86KbdBrightnessUp
  xbacklight -inc 5

XF86KbdBrightnessDown
  xbacklight -dec 5

# grab screenshot of current desktop
super + control + shift + 3
  scrot -q 100 "/tmp/screenshot-$(date '+%Y%m%d-%H%M%S').png"

super + control + shift + 4
  scrot -q 100 -s "/tmp/screenshot-$(date '+%Y%m%d-%H%M%S').png"

# refresh wallpaper
super + control + shift + r
  feh --bg-fill https://source.unsplash.com/random/1440x900

# toggle transparent
super + control + shift + t
  transset-df -t 0.9

#
# bspwm hotkeys
#

# quit bspwm normally
super + alt + Escape
  bspc quit && killall bspwmrc

# close and kill
super + {_,shift + }q
  bspc node -{c,k}

# place the current node to the preselect node
super + y
  bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
  bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# alternate between the tiled and monocle layout
super + m
  bspc desktop -l next

# set the node flags
super + ctrl + {x,y,z}
  bspc node -g {locked,sticky,private}

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
  bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
  bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
  bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
  bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
  bspc node -{f,s} {west,south,north,east}

# focus the last node
super + {Tab}
  bspc {node} -f last

# focus the older or newer node in the focus history
super + {o,i}
  bspc wm -h off; \
  bspc node {older,newer} -f; \
  bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
  bspc {desktop -f,node -d} '^{1-9,10}'

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
  bspc node -z {left -4 0,bottom 0 4,top 0 -4,right 4 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
  bspc node -z {right -4 0,top 0 4,bottom 0 -4,left 4 0}

# move a floating window
super + {Left,Down,Up,Right}
  bspc node -v {-20 0,0 20,0 -20,20 0}

